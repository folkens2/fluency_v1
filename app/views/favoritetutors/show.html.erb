<div class="page-header">
  <h3><%= @favoritetutor.tutor.name %> added as one of your favorite tutors</h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @favoritetutor.user.email %></dd>

      <dt>Tutor</dt>
      <dd><%= @favoritetutor.tutor.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/favoritetutors" class="btn btn-primary">
        Back
      </a>
      <a href="/favoritetutors/<%= @favoritetutor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_favoritetutor/<%= @favoritetutor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
