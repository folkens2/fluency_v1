<div class="page-header">
  <h1>
    Languages
    <a href="/languages/new" class="btn btn-lg btn-success">New Language</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @languages.each do |language| %>
      <tr>
        <td><%= language.name %></td>
        <td>
          <a href="/languages/<%= language.id %>" class="btn btn-primary">Show</a>
          <a href="/languages/<%= language.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_language/<%= language.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
