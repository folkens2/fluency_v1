<div class="page-header">
  <h3>Tutor #<%= @tutor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Instruction lang</dt>
      <dd><%= @tutor.instruction_lang_id %></dd>

      <dt>Instruction lang skill</dt>
      <dd><%= @tutor.instruction_lang_skill_id %></dd>

      <dt>Bio</dt>
      <dd><%= @tutor.bio %></dd>

      <dt>Name</dt>
      <dd><%= @tutor.name %></dd>

      <dt>Rate hourly</dt>
      <dd><%= @tutor.rate_hourly %></dd>

      <dt>Origin</dt>
      <dd><%= @tutor.origin_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tutors" class="btn btn-primary">
        Back
      </a>
      <a href="/tutors/<%= @tutor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_tutor/<%= @tutor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
